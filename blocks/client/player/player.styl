.player {
    &__list {
        position: absolute;
        top: 200px;
        right: 1200px;
    }

    &__play-button {
        position: absolute;
        z-index: 1;
        top: calc(50% - 15px);
        right: 225px;

        width: 100px;
        height: 100px;

        opacity: .6;
        background: url(play.png);
    }

    &__play-button:hover {
        opacity: .8;
    }

    &__play-button._reverted {
        background: url(pause.png);
    }
}

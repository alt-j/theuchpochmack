.track {
    font-size: 36px;
    line-height: 60px;

    &__text:before {
        width: 50px;
        height: 50px;
        margin-right: 15px;
        padding: 5px 5px 0 10px;

        content: '\25B6';
        cursor: pointer;
        text-align: center;

        color: rgba(214, 214, 214, .7);
        border: 1px solid;
        border-radius: 25px;
    }

    &._played > &__text:before {
        padding: 4px 8px 1px 7px;

        content: '\25A9';
    }
}
